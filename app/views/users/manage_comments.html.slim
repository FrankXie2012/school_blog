h1 Manage Comments
.container
  table.table-hover
    - @posts.each do |post|
      thead
        tr
          td = link_to post.user.name, user_path(post.user) rescue nil
          td.red = post.title
          td = button_tag(class: "btn btn-primary show-comments") do
            i.icon-comments  Show comments
      tbody.comments.hidden
        - post.comments.each do |comment|
          tr[id="#{dom_id(comment, 'row')}"]
            = simple_form_for [:edit, post, comment], remote: true do |f|
              td = comment.body
              td = comment.user.name
              td = button_tag(type: 'submit', class: "btn btn-success bold") do
                i.icon-pencil  Edit
            td = link_to raw("<i class=\"icon-trash icon-white\"> Delete</i>").html_safe, post_comment_path(post, comment), :confirm => 'Are you sure you want to destroy this comment?', :method => :delete, class: 'btn btn-danger'
  = link_to 'Back', admins_path